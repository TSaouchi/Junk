<build>
    <plugins>
        <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>jaxws-maven-plugin</artifactId>
            <version>2.6</version>
            <executions>
                <execution>
                    <goals>
                        <goal>wsimport</goal>
                    </goals>
                    <configuration>
                        <!-- Your WSDL URL or local file -->
                        <wsdlUrls>
                            <wsdlUrl>http://example.com/service?wsdl</wsdlUrl>
                        </wsdlUrls>
                        <!-- Where generated code will live -->
                        <packageName>com.mycompany.soapclient</packageName>
                    </configuration>
                </execution>
            </executions>
        </plugin>
    </plugins>
</build>
